<p id="notice"><%= notice %></p>

<h1>Items</h1>
<%= form_tag total_result_items_path, method: :put do%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rate</th>
      <th>Item category</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.rate %></td>
        <td><%= item.item_category.name %></td>
        <td><%#= check_box_tag 'to[]', item.id %></td>
        <td><%= check_box_tag "item_ids[]", item.id %></td>
       <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= submit_tag "Submit" %>

<%end%>
